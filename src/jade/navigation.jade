mixin nav-structure
  ul
    li
      a(href='#1') Nav Item 1
    li.menu
      a(href='#2') Nav Menu 1
      ul
        li
          a(href='#3') Menu Item 1
        li
          a(href='#4') Sub Menu 1
          ul
            li
              a(href='#5') Sub Menu Item 1
            li
              a(href='#6') Sub Menu Item 2
        li
          a(href='#7') Menu Item 2
    li
      a(href='#8') Nav Item 3

extends template

block title
  title GroundworkCSS &hearts; Navigation

block content
  .container
    .padded
      .row
        .three.fifths
          h1.zero.museo-slab Navigation Bar
          p.quicksand Responsive navigation bars with support for menus and sub-menus
        .two.fifths.align-right-ipad.align-right-desktop
          p.quicksand Component Usage Example 4 of 10
          p
            a.blue.button(href='typography.html')
              i.icon-arrow-left
              |  Back
            | 
            a.green.button(href='buttons.html')
              | Next: Buttons 
              i.icon-arrow-right
    hr
    .row
      .one.whole.padded
        h4 Target Breakpoints
        .row
          .one.whole.padded
            h4 iPad
            nav.nav(title='iPad Menu')
              +nav-structure()
        .row
          .one.whole.padded
            h4 Small Tablet
            nav.nav.small-tablet(title='Small Tablet Menu')
              +nav-structure()
        .row
          .one.whole.padded
            h4 Mobile
            nav.nav.mobile(title='Mobile Menu')
              +nav-structure()
        hr
        br
        h4 Colors
        .row
          .one.third.padded
            nav.nav.yellow
              +nav-structure()
          .one.third.padded
            nav.nav.orange
              +nav-structure()
          .one.third.padded
            nav.nav.red
              +nav-structure()
        .row
          .one.third.padded
            nav.nav.pink
              +nav-structure()
          .one.third.padded
            nav.nav.purple
              +nav-structure()
          .one.third.padded
            nav.nav.asphalt
              +nav-structure()
        .row
          .one.third.padded
            nav.nav.blue
              +nav-structure()
          .one.third.padded
            nav.nav.turquoise
              +nav-structure()
          .one.third.padded
            nav.nav.green
              +nav-structure()
