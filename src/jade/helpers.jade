extends template

block title
  title GroundworkCSS &hearts; Helpers
  style(type="text/css").
    .desktop-only,
    .hide-on-desktop,
    .ipad-only,
    .hide-on-ipad,
    .small-tablet-only,
    .hide-on-small-tablet,
    .mobile-only,
    .hide-on-mobile {
      padding: 0.25em;
      color: #fff;
    }

block content
  .container
    .padded
      .row
        .three.fifths
          h1.zero.museo-slab Conditional Content Helpers
          p.quicksand Conditionally show and hide elements for specific viewport sizes.
        .two.fifths.align-right-ipad.align-right-desktop
          p.quicksand Component Usage Example 2 of 10
          p
            a.blue.button(href='grid.html')
              i.icon-arrow-left
              |  Back
            | 
            a.green.button(href='typography.html')
              | Next: Typography 
              i.icon-arrow-right
    hr
    .row
      .one.whole.padded
        .responsive(data-compression='17', data-max='40')
          .padded
            ol.list.large
              li.green.desktop-only Desktop only
              li.blue.hide-on-desktop Hide on desktop
              li.green.ipad-only iPad only
              li.blue.hide-on-ipad Hide on iPad
              li.green.small-tablet-only Small-tablet only
              li.blue.hide-on-small-tablet Hide on small-tablet
              li.green.mobile-only Mobile only
              li.blue.hide-on-mobile Hide on mobile
